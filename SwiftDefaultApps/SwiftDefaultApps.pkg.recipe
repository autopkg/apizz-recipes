<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Downloads the latest release copy of the SwiftDefaultApps from Lord Kamina on Github and creates a package with the executable and preference pane.

To package only the executable, use SwiftDefaultApps_CLI.pkg.recipe instead.</string>
    <key>Identifier</key>
    <string>com.github.apizz.pkg.SwiftDefaultApps</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>SwiftDefaultApps</string>
    </dict>
    <key>MinimumVersion</key>
    <string>0.4.0</string>
    <key>ParentRecipe</key>
    <string>com.github.apizz.download.SwiftDefaultApps</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>pkgdirs</key>
                <dict>
                    <key>usr</key>
                    <string>0755</string>
                    <key>usr/local/</key>
                    <string>0755</string>
                    <key>usr/local/bin/</key>
                    <string>0775</string>
                    <key>Library</key>
                    <string>0755</string>
                    <key>Library/PreferencePanes</key>
                    <string>0755</string>
                </dict>
                <key>pkgroot</key>
                <string>%RECIPE_CACHE_DIR%/%NAME%</string>
            </dict>
            <key>Processor</key>
            <string>PkgRootCreator</string>
        </dict>
        <dict>
            <key>Comment</key>
            <string>Get the swda path</string>
            <key>Arguments</key>
            <dict>
                <key>pattern</key>
                <string>%RECIPE_CACHE_DIR%/unarchive/swda</string>
            </dict>
            <key>Processor</key>
            <string>FileFinder</string>
        </dict>
        <dict>
            <key>Comment</key>
            <string>Assign collected swda path to cli_path and get the prefpane filename</string>
            <key>Arguments</key>
            <dict>
                <key>cli_path</key>
                <string>%found_filename%</string>
                <key>pattern</key>
                <string>%RECIPE_CACHE_DIR%/unarchive/*.prefpane</string>
            </dict>
            <key>Processor</key>
            <string>FileFinder</string>
        </dict>
        <dict>
            <key>Comment</key>
            <string>Assign collected prefpane path to prefpane_path. Copy swda to /usr/local/bin/</string>
            <key>Arguments</key>
            <dict>
                <key>prefpane_path</key>
                <string>%found_filename%</string>
                <key>destination_path</key>
                <string>%pkgroot%/usr/local/bin/</string>
                <key>source_path</key>
                <string>%cli_path%</string>
            </dict>
            <key>Processor</key>
            <string>Copier</string>
        </dict>
        <dict>
            <key>Comment</key>
            <string>Copy pref pane to /Library/PreferencePanes/SwiftDefaultApps.prefpane</string>
            <key>Arguments</key>
            <dict>
                
                <key>destination_path</key>
                <string>%pkgroot%/Library/PreferencePanes/SwiftDefaultApps.prefpane</string>
                <key>overwrite</key>
                <true/>
                <key>source_path</key>
                <string>%prefpane_path%</string>
            </dict>
            <key>Processor</key>
            <string>Copier</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>pkg_request</key>
                <dict>
                    <key>chown</key>
                    <array>
                        <dict>
                            <key>group</key>
                            <string>wheel</string>
                            <key>mode</key>
                            <string>0755</string>
                            <key>path</key>
                            <string>usr</string>
                            <key>user</key>
                            <string>root</string>
                        </dict>
                        <dict>
                            <key>group</key>
                            <string>wheel</string>
                            <key>mode</key>
                            <string>0755</string>
                            <key>path</key>
                            <string>Library</string>
                            <key>user</key>
                            <string>root</string>
                        </dict>
                    </array>
                    <key>id</key>
                    <string>com.github.Lord-Kamina.SwiftDefaultApps</string>
                    <key>options</key>
                    <string>purge_ds_store</string>
                    <key>pkgname</key>
                    <string>%NAME%-%version%</string>
                    <key>version</key>
                    <string>%version%</string>
                </dict>
            </dict>
            <key>Processor</key>
            <string>PkgCreator</string>
        </dict>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>path_list</key>
                <array>
                    <string>%RECIPE_CACHE_DIR%/%NAME%</string>
                    <string>%RECIPE_CACHE_DIR%/unarchive</string>
                </array>
            </dict>
            <key>Processor</key>
            <string>PathDeleter</string>
        </dict>
    </array>
</dict>
</plist>
